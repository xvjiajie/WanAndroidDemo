<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rtvStick"
            style="@style/text_color_primary_alpha_65_14"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:background="@drawable/shape_hf1_head_rv_left_bg"
            android:text="@string/stick"
            android:textColor="?attr/colorAccent"
            app:layout_constraintBottom_toBottomOf="@id/tvStickContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvStickContent" />

        <TextView
            android:id="@+id/tvStickContent"
            style="@style/text_color_primary_alpha_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="竟然还能这么用！Kotlin 的扩展函数和扩展属性（Extension Functions / Properties）"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rtvStick"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewDivision"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_item_bg"
            android:backgroundTint="@color/color_on_surface_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStickContent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>